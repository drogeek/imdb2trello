{

  "manifest_version": 3,
  "name": "Imdb2Trello",
  "version": "1.5",

  "description": "Insert a new card in a list on Trello, along with its rating and poster",

  "icons": {
    "180": "icons/imdb2trello.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.imdb.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "permissions": [
      "activeTab",
      "storage",
      "tabs",
      "scripting"
  ],

  "host_permissions": [
    "*://*.imdb.com/*",
    "*://*.trello.com/*"
  ],

  "action":{
    "default_icon": {
        "180": "icons/imdb2trello.png"
    },
    "default_title": "Imdb2Trello",
    "default_popup": "popup.html"
  },

   "sidebar_action": {
    "default_title": "Imdb2Trello",
    "default_panel": "popup.html",
    "default_icon": {
      "180": "icons/imdb2trello.png"
    }
  },

  "options_ui": {
    "page": "settings_popup.html"
  },

  "browser_specific_settings": {
    "gecko": {
        "id": "imdb2trello@jd.guiennet.fr",
        "data_collection_permissions": {
          "required": [
            "authenticationInfo"
          ]
        }
    }
  }

}
